<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel_flavia.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10">

        <Label Text="Calculo da Diária" 
               FontFamily="GreatVibes-Regular"
               FontSize="50"
               TextColor="White"
               HorizontalOptions="Center" />
        
        <Frame Padding="10" BackgroundColor="{StaticResource Gray900}">
            
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto, Auto"
                      ColumnDefinitions="*, Auto, *">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos"
                           TextColor="White"
                           VerticalOptions="Center"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="WhiteSmoke"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference stp_adultos}"
                           VerticalOptions="Center"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças"
                           TextColor="White"
                           VerticalOptions="Center"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="WhiteSmoke"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference stp_criancas}"
                           VerticalOptions="Center"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="2" Grid.Column="0"
                           Text="Pets"
                           TextColor="White"
                           VerticalOptions="Center"/>

                    <Label Grid.Row="2" Grid.Column="1"
                           TextColor="WhiteSmoke"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference stp_pets}"
                           VerticalOptions="Center"/>

                    <Stepper Grid.Row="2" Grid.Column="2"
                             x:Name="stp_pets"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                </Grid>

                <Label Text="Escolha sua Suíte"
                       FontFamily="Lato-Black"
                       TextColor="White"/>

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação" />

                <Frame Padding="10"
                       Margin="10">
                    
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" />
                        <HorizontalStackLayout>
                            <Label Text="Check-in:"/>
                            <DatePicker x:Name="dtp_checkin"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:"/>
                            <DatePicker x:Name="dtp_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                   

                </Frame>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>